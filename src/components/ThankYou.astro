---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import astroLogo from '../assets/computertommylogo.svg';
import background from '../assets/background.svg';
---
<Layout>
    <div id="container">
        <img id="background" src={background.src} alt="" fetchpriority="high" />
        <main>
            <section id="thank-you-section">
                <a href="/" class="logo">
                    <img src={astroLogo.src} width="115" height="48" alt="Astro Homepage" />
                </a>
                
                <div class="heading-container">
                    <h1>Thank you for your message!</h1>
                    <a href="/" class="back-link" aria-label="Back to home">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
                
                <p class="subtitle">
                    We've received your submission and will get back to you within 24 hours.
                </p>
                
                <div class="cta-buttons">
                    <a href="/" class="button primary">Back to Home</a>
                </div>
                
                <div class="trust-badges">
                    <span>✓ 24 Hour Response</span>
                    <span>✓ No Obligation Quote</span>
                    <span>✓ Confidential</span>
                </div>
            </section>
        </main>
    </div>
    <Footer />
</Layout>

<style>
    #background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        filter: blur(100px);
    }

    #container {
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        height: 100%;
    }

    main {
        height: 100%;
        display: flex;
        justify-content: center;
    }

    #thank-you-section {
        display: flex;
        align-items: start;
        flex-direction: column;
        justify-content: center;
        padding: 16px;
        max-width: 600px;
        width: 100%;
        position: relative;
    }

    .heading-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        margin-top: 0.25em;
    }
    
    h1 {
        font-size: 22px;
        margin: 0;
    }
    
    .back-link {
        color: #4b5563;
        font-size: 18px;
        transition: transform 0.2s ease, color 0.2s ease;
        margin-left: 12px;
    }
    
    .back-link:hover {
        color: #111827;
        transform: translateX(-3px);
    }

    p {
        color: #4b5563;
        font-size: 16px;
        line-height: 24px;
        letter-spacing: -0.006em;
        margin: 0;
    }

    .logo {
        transition: transform 0.2s ease;
    }

    .logo:hover {
        transform: scale(1.05);
    }

    .subtitle {
        max-width: 600px;
        margin: 1.5rem 0;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        margin: 2rem 0;
    }

    .button {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: inline-block;
    }

    .button:hover {
        transform: translateY(-2px);
    }

    .button.primary {
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(50, 69, 255, 0.2);
    }

    .trust-badges {
        display: flex;
        gap: 2rem;
        margin: 0 auto;
        justify-content: space-between;
        color: #4b5563;
        font-size: 0.9rem;
    }

    .trust-badges span {
        display: flex;
        gap: 0.5rem;
    }

    @media screen and (max-width: 768px) {
        #container {
            display: flex;
            flex-direction: column;
        }

        #thank-you-section {
            display: block;
            padding-top: 10%;
        }
        
        .trust-badges {
            flex-direction: column;
            gap: 1rem;
        }
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    #thank-you-section > * {
        animation: fadeIn 0.5s ease-out forwards;
        opacity: 0;
    }

    #thank-you-section > *:nth-child(1) { animation-delay: 0.1s; }
    #thank-you-section > *:nth-child(2) { animation-delay: 0.2s; }
    #thank-you-section > *:nth-child(3) { animation-delay: 0.3s; }
    #thank-you-section > *:nth-child(4) { animation-delay: 0.4s; }
    #thank-you-section > *:nth-child(5) { animation-delay: 0.5s; }
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
