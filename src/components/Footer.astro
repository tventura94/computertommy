<style>
    footer {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: clamp(2rem, 5vw, 3rem) clamp(1rem, 3vw, 1.5rem);
        margin-top: auto;
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        width: 100%;
        box-sizing: border-box;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        gap: clamp(2rem, 4vw, 3rem);
        width: 100%;
    }

    .footer-branding {
        flex: 1 1 300px;
        min-width: 200px;
    }

    .footer-logo {
        display: inline-block;
        margin-bottom: 1rem;
        transition: transform 0.2s ease;
    }

    .footer-logo img {
        max-width: 100%;
        height: auto;
    }

    .footer-logo:hover {
        transform: scale(1.05);
    }

    .copyright {
        color: #6b7280;
        font-size: 0.9rem;
        margin: 0;
    }

    .footer-links {
        flex: 2 1 600px;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: clamp(1.5rem, 3vw, 2rem);
    }

    .link-group {
        flex: 1 1 150px;
        min-width: 100px;
    }

    .link-group h3 {
        color: #111827;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        margin-top: 0;
    }

    .link-group ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .link-group li {
        margin-bottom: 0.5rem;
    }

    .link-group a {
        color: #4b5563;
        text-decoration: none;
        transition: color 0.2s ease, transform 0.2s ease;
        display: inline-block;
        font-size: 0.95rem;
    }

    .link-group a:hover {
        color: #3245ff;
        transform: translateX(2px);
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        color: #4b5563;
        background: rgba(255, 255, 255, 0.1);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .social-links a:hover {
        color: white;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        transform: translateY(-3px);
    }

    @media (prefers-color-scheme: dark) {
        .link-group h3 {
            color: #e5e7eb;
        }
        
        .copyright {
            color: #9ca3af;
        }
        
        .link-group a {
            color: #d1d5db;
        }
    }

    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            gap: 2rem;
        }

        .footer-links {
            flex-direction: column;
            gap: 1.5rem;
            width: 100%;
        }

        .link-group {
            flex: 1 1 auto;
            min-width: 0;
            width: 100%;
        }
        
        .social-links {
            margin-top: 0.5rem;
        }
    }

    @media (max-width: 480px) {
        footer {
            padding: 1.5rem 1rem;
            overflow-x: hidden;
        }
        
        .footer-container {
            gap: 1.5rem;
        }
        
        .footer-branding {
            text-align: center;
            min-width: 0;
            width: 100%;
        }
        
        .link-group h3 {
            margin-bottom: 0.75rem;
        }
        
        .link-group li {
            margin-bottom: 0.4rem;
        }
        
        .social-links {
            justify-content: center;
        }
    }
</style>
